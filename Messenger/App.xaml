             xmlns:local="clr-namespace:Messenger"
             StartupUri="Views\Windows\MainWindow.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Styles/TextBoxes.xaml"/>
                <ResourceDictionary Source="/Styles/DataGrids.xaml"/>
                <ResourceDictionary Source="/Styles/ComboBoxes.xaml"/>
                <ResourceDictionary Source="/Styles/ListViews.xaml"/>
                <ResourceDictionary Source="/Styles/MainColors.xaml"/>
                <ResourceDictionary Source="/Styles/TextBlocks.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
