<Window x:Class="Messenger.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:page="clr-namespace:Messenger.Views.Pages"
        xmlns:vm="clr-namespace:Messenger.ViewModels"
        mc:Ignorable="d"
        Title="Мессенджер" Height="450" Width="800" MinHeight="450" MinWidth="800" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainPageViewModel}">
            <page:MainPage/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UserProfileViewModel}">
            <page:UserProfile/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Frame Source="/Views/Pages/Authorization.xaml" Content="{Binding CurrentChildView}" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
